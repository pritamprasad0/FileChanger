<Window x:Class="FileChanger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="500" Width="1000">
    <Grid>
        <TabControl HorizontalAlignment="Left" Height="450" Margin="10,10,0,0" VerticalAlignment="Top" Width="972">
            <TabItem x:Name="Junction" Header="Junction" Loaded="Junction_Loaded">
                <Grid Background="#FFE5E5E5" Margin="0,0,0,0">
                    <TextBox x:Name="SourceTextBox" HorizontalAlignment="Left" Height="25" Margin="200,30,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="550"/>
                    <TextBox x:Name="DestinationTextBox" HorizontalAlignment="Left" Height="25" Margin="200,80,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="550"/>
                    <Button x:Name="SourceButton" Content="Browse" HorizontalAlignment="Left" Margin="770,30,0,0" VerticalAlignment="Top" Width="100" Click="SourceButton_Click"/>
                    <Button x:Name="DestinationButton" Content="Browse" HorizontalAlignment="Left" Margin="770,80,0,0" VerticalAlignment="Top" Width="100" Click="DestinationButton_Click"/>
                    <Label Content="Source" HorizontalAlignment="Left" Margin="70,30,0,0" VerticalAlignment="Top" Height="30" Width="120"/>
                    <Label Content="Destination" HorizontalAlignment="Left" Margin="70,80,0,0" VerticalAlignment="Top" Height="30" Width="120"/>
                    <Button x:Name="MakeJunctionButton" Content="Make Junction" HorizontalAlignment="Left" Margin="416,131,0,0" VerticalAlignment="Top" Width="100" Click="MakeJunctionButton_Click"/>
                </Grid>
            </TabItem>
            <TabItem Header="Hide">
                <Grid Background="#FFE5E5FF"/>
            </TabItem>
            <TabItem Header="Temp">
                <Grid Background="AntiqueWhite"></Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
